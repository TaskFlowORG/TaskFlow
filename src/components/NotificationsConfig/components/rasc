    const updateBack = async (e: ChangeEvent<HTMLInputElement>, id: string) => {
        if (e.target.id === id) {
            const newValue = e.target.checked;
            setNotifications(newValue);
            Cookies.set(`${id}`, newValue.toString());

            try {
                const usuario = await userService.findByUsername("jonatas");
                const configuration: Configuration = usuario.configuration || {};
                configuration[id] = newValue;

                const updatedUser = new UserPut(usuario.username, undefined, undefined, undefined, undefined, undefined, undefined, configuration);
                console.log(updatedUser.configuration)

                await userService.patch(updatedUser);
            } catch (error) {
                console.error("Erro ao atualizar usu√°rio: ", error);
            }
        }