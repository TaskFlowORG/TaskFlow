const [color, setColor] = useState('#0000FF');

  function changeColor(e) {
    setColor(e.target.value);

    document.documentElement.style.setProperty('--primary-color', color);
    document.documentElement.style.setProperty('--secondary-color', convertColor(color));
  }



  return (

    <div className=" w-full h-full">
      <GeneralConfig></GeneralConfig>
      <div className="h-min flex flex-col">
        <div className="w-96 h-12 mt-40 bg-gradient-to-r from-primary to-secondary"></div>
        <input type="color" className="mt-24" value={color} onChange={e => changeColor(e)} />
      </div>
    </div>
    
  )